{
    "name": "poptip",
    "version": "0.2.0",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/poptip.js",
            "require": "./dist/poptip.umd.cjs"
        },
        "./dist/*.css": {
            "import": "./dist/*.css",
            "require": "./dist/*.css"
        }
    },
    "typings": "./dist/poptip.d.ts",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build"
    },
    "devDependencies": {
        "@types/node": "^22.15.3",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.4",
        "vite-plugin-dts": "^4.5.3"
    },
    "files": [
        "./dist"
    ],
    "pnpm": {
        "onlyBuiltDependencies": [
            "esbuild"
        ]
    }
}
